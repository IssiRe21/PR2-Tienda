<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Productos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet" href="/main.css">
</head>

<body>

    <nav class="navbar navbar-light verde">
        <div class="container-fluid">
            <a href="/" class="navbar-brand"> <img class="logo" src="/img/logo.jpg"> </a>

            <form action="/busqueda" method="GET" class="d-flex">
                <input class="form-control me-2" type="text" name="query" placeholder="Buscar" aria-label="Search">
                <button class="btn btn-outline-success">Buscar</button>
            </form>
        </div>
    </nav>


    <% lista.forEach(function(producto) { %>

        <div class="card mx-auto" style="width: 18rem;">
            <img src="<%= producto.img %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">
                    <%= producto.nombre%>
                </h5>
                <p class="card-text">Precio por kilogramo: $<%= producto.precio %>
                </p>
                <a href="<%= `/clasif/${producto.tipo}/detalles?id=${producto.id}` %>" class="btn btn-primary">Detalles</a>
            </div>
        </div>
        <% }); %>

</body>

</html>